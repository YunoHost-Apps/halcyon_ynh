{
    "name": "Halcyon for YunoHost",
    "id": "halcyon",
    "packaging_format": 1,
    "description": {
        "en": "A webclient for Mastodon and Pleroma which looks like Twitter."
    },
    "version": "2.1.2",
    "url": "https://notabug.org/halcyon-suite/halcyon",
    "license": "AGPL3",
    "maintainer": {
        "name": "Anmol Sharma",
        "email": "anmol@datamol.org"
    },
    "requirements": {
        "yunohost": ">= 2.7"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Halcyon"
                },
                "example": "example.com"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?"
                },
                "default": true
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language"
                },
                "choices": ["en_US", "de_DE" , "pt_BR" , "ja_JP" , "ko_KR" , "pl_PL" , "gl_ES" ],
                "default": "en_US"
            }
            
        ]
    }
}
